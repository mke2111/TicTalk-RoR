<%= render 'shared/header' %>

<h1 class='text-center text-3xl font-mono p-3'>Sign in to <span class='text-blue-600 text-4xl animate-bounce w-6 h-6'>TicTalk</span></h1>
<div class='flex flex-col items-center '>
  <div>
    <%= image_tag('mimi.png', class: 'h-24 w-20  opacity-25') %> 
  </div>

  <div class='animate-pulse border border-light-blue-300 shadow rounded-md p-4 max-w-sm w-full mx-auto mt-6'>

  <%= form_with(url: sessions_path, local: true) do |form| %>
    <%= form.fields_for :session do |f| %>
      <div class="field px-6">
        <%= f.label :username, class: 'block text-sm text-left font-medium text-gray-700' %>
        <%= f.text_field :username, class: 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= form.submit "Sign in", class: 'bg-blue-200 rounded-full py-1 px-3 cursor-pointer ' %>
    </div>
  <% end %>
  </div>
</div>