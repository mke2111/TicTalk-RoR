

<div class="p-5">
  
  <% @users.each do |user| %>
  <div class="grid grid-cols-3 pt-3">
    <div class="flex flex-row col-span-2">
      <%= image_tag(photo(user.photo), :class =>'w-12 h-12 rounded-full')%>
      <div class="p-3">
          <strong>@<%= link_to user.username, user, class: 'hover:text-blue-700 hover:bg-transparent' %></strong>

      </div>
    </div>
    
    <div class='mt-4 text-center'>

      <%if current_user?(user)%>
        <button class='pl-1 bg-blue-300 rounded-lg'>My Account</button>
      <%else%>
        <%if following?(user)%>
          <%= button_to 'Unfollow', following_path(id: user.id), method: 'delete', class: 'px-2 bg-blue-300 rounded-lg cursor-pointer' %>
        <%else%>
          <%= button_to 'Follow', followings_path(id: user.id), method: 'post', class: 'px-2 bg-blue-300 rounded-lg cursor-pointer' %>
        <%end%>
      <%end%>

    </div>
  </div>

  <% end %>

</div>
<br>