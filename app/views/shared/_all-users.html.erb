<div class='px-3 mx-3 pt-4'>

<div class='pt-3 px-4  mr-3 bg-white shadow'>
  <% @users.each do |user| %>
    <article class='flex flex-row py-1 '>
      <div class='flex-initial col-span-1 pr-5 sticky'>
        <%= gravatar_image_tag('mke@mke.com', :class => 'rounded-full', :gravatar => { :size => 50 }) %> 
      </div>
      
      <div class='grid grid-cols-3 justify-between border-b-1'>
        <p class='text-blue-700'><%= user.fullname.capitalize %></p>
      </div>
      <div class=''>
      <p class='text-right pr-5 text-xs font-medium text-blue-700 focus:outline-none  px-3 rounded-md text-sm font-medium transform hover:scale-110 motion-reduce:transform-none hover:bg-transparent'> 
            <strong>
              <%if current_user?(user)%>
                <button class='px-2 bg-blue-300 rounded-lg cursor-pointer'>My Account</button>
              <%else%>
                <%if following?(user)%>
                  <%= button_to 'Unfollow', following_path(id: user.id), method: 'delete', class: 'px-2 bg-blue-300 rounded-lg cursor-pointer' %>
                <%else%>
                  <%= button_to 'Follow', followings_path(id: user.id), method: 'post', class: 'px-2 bg-blue-300 rounded-lg cursor-pointer' %>
                <%end%>
              <%end%>
                
            </strong></p></div>
    </article>
    <hr class='divide-blue-200'>
  
  <% end %>
</div>
</div>